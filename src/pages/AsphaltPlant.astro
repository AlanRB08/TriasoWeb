---
import Hero from '../components/AsphaltPlants/Hero.astro';
import Layout from '../layouts/Layout.astro';
import MainSection from '../components/AsphaltPlants/MainSection.astro'
import DrumMixers from '../components/AsphaltPlants/DrumMixers.astro';
import AsphaltTanks from '../components/AsphaltPlants/AsphaltTanks.astro';
import BinUnits from '../components/AsphaltPlants/BinUnits.astro';
import StorageSilos from '../components/AsphaltPlants/StorageSilos.astro';
import MexManufactur from '../components/AsphaltPlants/MexManufactur.astro';
import Spare from '../components/AsphaltPlants/Spare.astro';
import GallerySlider from '../components/AsphaltPlants/GallerySlider';
import Hero1 from '../assets/images/AsphaltPlant/HeroAsphalt.webp';
import HotspotComponent from '../components/ImageHotspot/HotspotComponent.astro';

const images1 = [
  { src: '/Gallery/fab-silo.webp', title: 'Silo Manufacturing' },
  { src: '/Gallery/oil-heater.webp', title: 'Oil heater thermal insulation' },
  { src: '/Gallery/serial-parts-bg.webp', title: 'Serial parts machining' },
  { src: '/Gallery/fly-cutting-sm.webp', title: 'Flights cutting' },
  { src: '/Gallery/fab-planta-frio.webp', title: 'Cold mixing plant manufacturing' },
  { src: '/Gallery/quemadores.webp', title: 'Burners manufacture' },
  { src: '/Gallery/drum-mixer.webp', title: 'Drum mixer welding' },
  { src: '/Gallery/elevator-manu.webp', title: 'Elevator hinges manufacturing' },
  // { src: '/Gallery/customdes.png', title: 'Elevator hinges manufacturing' }
  // agrega hasta 16 o más imágenes
];

---
<Layout title="Aphalt Plants">
  <head>
    <!-- Preload para la imagen Hero -->
    <link 
      rel="preload" 
      href={Hero1.src} 
      as="image" 
      imagesrcset={`
        ${Hero1.src}?width=400 1200w,
        ${Hero1.src}?width=800 800w,
        ${Hero1.src}?width=1200 1200w
      `}
      imagesizes="100vw"
      fetchpriority="high"
    />
  </head>

  <Hero 
    heroImage={Hero1} 
    title="ASPHALT PLANTS" 
    altText="Modern asphalt production plant with heavy machinery" 
  />
    <MainSection />
    <DrumMixers />
    <!-- <Baghouses /> -->
    <AsphaltTanks />
    <BinUnits />
    <!-- <HeatingSystem /> -->
    <StorageSilos />
    <!-- <ColdMix />  -->
    <MexManufactur />
    <GallerySlider client:load images={images1} />
    <Spare /> 
    <!-- <AnalisisInversion client:only/> -->
    <HotspotComponent/>
</Layout>