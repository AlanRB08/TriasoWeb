---
import img1 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS1.webp";
import img2 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS2.webp";
import img3 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS3.webp";
import img4 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS4.webp";
import img5 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS5.webp";
import img6 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS6.webp";
import img7 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS7.webp";
import img8 from "../../assets/images/AsphaltStorage/SliderGalleryStorage/ATS8.webp";
import MiniGallery from "../unitComponents/MiniGallery";

const gallerySlides = [
    { img: img1 },
    { img: img2 },
    { img: img3 },
    { img: img4 },
    { img: img5 },
    { img: img6 },
    { img: img7 },
    { img: img8 },
];
---

<div class="w-full bg-grisT py-10">
    <div class="max-w-7xl px-8 mx-auto">
        <h2 class="text-2xl md:text-3xl text-white font-bold">Applications</h2>
    </div>
    <div
        class="w-full font-bold text-white p-10 rounded-t-2xl grid grid-cols-1 md:grid-cols-2 gap-10 max-w-7xl px-8 mx-auto"
    >
        <div class="w-full">
            <h3>Asphalt Mixing</h3>
            <ul class="list-disc ml-6 font-thin">
                <li>
                    Storage and heating of asphalt cement for hot mix asphalt
                    production.
                </li>
            </ul><br />
            <h3>Roofing & Construction Products</h3>
            <ul class="list-disc ml-6 font-thin">
                <li>
                    Used to prepare and store asphalt-based materials for
                    roofing membranes and sealants.
                </li>
            </ul><br />
            <h3>Crude Oil & Natural Gas Processing</h3>
            <ul class="list-disc ml-6 font-thin">
                <li>
                    Handling of asphalt by-products or heavy residues in oil
                    refining and gas separation processes.
                </li>
            </ul><br />
        </div>
        <div class="w-full">
            <h3>Polymer-Modified Asphalt</h3>
            <ul class="list-disc ml-6 font-thin">
                <li>
                    Blending and storage of asphalt mixed with polymers for
                    improved performance.
                </li>
            </ul><br />
            <h3>Emulsified Asphalt Production</h3>
            <ul class="list-disc ml-6 font-thin">
                <li>
                    Maintaining temperature and stability of asphalt emulsions
                    for cold mix applications.
                </li>
            </ul><br />
            <h3>Rubber Asphalt Blending</h3>
            <ul class="list-disc ml-6 font-thin">
                <li>
                    Incorporating crumb rubber into liquid asphalt for enhanced
                    pavement flexibility.
                </li>
            </ul>
        </div>
    </div>
    <div class="w-full bg-grisT max-w-7xl px-8 mx-auto">
        <h2 class="font-bold text-white text-2xl px-4 md:text-3xl">
            Gallery
        </h2><br />
        <MiniGallery
            slides={gallerySlides}
            autoSlide={false}
            heightClass="h-[250px] md:h-[500px]"
            showText={false}
            client:only
        />
    </div>
</div>

<section
    class="relative w-full h-[800px] bg-cover bg-center flex items-center"
    style="background-image: url('/sedenaBG.webp')"
>
    <div class="absolute inset-0 "></div>
    <div class="max-w-7xl mx-auto px-8">
        <div>
            <h1 class="text-4xl text-center lg:text-start md:text-start font-bold mb-8 text-white">
                SEDENA Asphalt Storage Tanks
            </h1>
            <p class="text-lg font-bold text-center lg:text-start md:text-start  text-white ">
                In 2024, the Mexican Secretariat of National Defense (SEDENA)
                purchased 18 asphalt storage tanks from our company to support
                national paving and infrastructure works.
            </p>
        </div>
    </div>
</section>
