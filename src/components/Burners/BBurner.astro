---
import qmador from "../../assets/images/Burners/qmador.webp";
import qmadorInfo from "../../assets/images/Burners/quemadorInfo.webp";
import { Image } from "astro:assets";
---
<section class="w-full h-auto max-w-7xl px-8 mx-auto my-5">
    <div class="w-full h-full relative">
        <div class="w-full">
            <Image src={qmador} alt="" class="w-3/4">
        </div>
        <div class="w-full px-8 md:px-52 h-full absolute top-[-10px]  lg:top-[290px] left-10 lg:left-[-12rem]">
            <h1 class="text-md lg:text-[21px] text-black lg:text-white font-bold">For equipment that lasts, choose components built to withstand heavy-duty use</h1>
        </div>
    </div>
    <div>
        <Image src={qmadorInfo} alt="">
    </div>
</section>