---
import oil from '../../assets/images/AsphaltPlant/oil1.webp';
import Image from 'astro/components/Image.astro';
---
<div class="w-full flex flex-col items-center justify-center font-bold pb-10">
    <div class="w-full bg-grisT px-8 md:px-52">
        <div class="w-full grid grid-cols-1 md:grid-cols-2">
        <div class="flex flex-col justify-center text-white">
            <h1 class="text-2xl md:text-6xl w-full text-start">Oil Heaters</h1>
            <h1 class="text-2xl md:text-6xl w-full text-start">Option</h1>
            <h1 class="text-2xl md:text-6xl w-full text-start">available</h1>
        </div>
        <div class="w-full flex flex-col justify-center items-center">
            <div class="p-8 flex items-center justify-center">
                <Image src={oil} alt="Customizable Bin Unit Diagram" class="w-full"/>
            </div>
        </div>
    </div>
    
    <div class="w-full flex justify-center">
        <button class="text-blueMain px-4 py-2 rounded-2xl text-6xl" onclick="toggleDropdown()" id="dropdown-button">
            <svg width="84px" height="84px" stroke-width="2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" color="#ffffff" id="dropdown-arrow">
                <path d="M6 9L12 15L18 9" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
        </button>
    </div>
    </div>
     
    <div class="w-full transition-all duration-300 overflow-hidden px-8 md:px-52 bg-grisT text-white" id="extradiv" style="max-height: 0">
        <div class="text-white w-full list-inside md:mb-0 md:opacity-100">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 py-10">
                <div class="flex flex-col justify-start items-center w-full gap-10">
                    <ul class="ml-6 list-disc space-y-10 text-base md:text-lg">
                        <li>Connections for asphalt tanks with coil heating systems</li>
                        <li>Thermally insulated with ceramic fiber</li>
                        <li> Stainless steel exterior sheet covering</li>
                        <li> Equipped with a burner</li>
                        <li>Automatic on/off control based on temperature</li>
                    </ul>
                </div>
                <div class="flex flex-col items-center justify-center h-full ">
                    <ul class="ml-6 list-disc space-y-10 text-base md:text-lg">
                        <li> Automatic on/off control based on temperature</li>
                        <li> Two operating modes: Automatic and Manual</li>
                        <li> Siemens PLC-based control system.</li>
                        <li> 100% duty cycle</li>
                        <li> Includes safety systems and automatic shutdown in case of errors</li>
                    </ul>
                </div>
            </div>
            <div class="w-full flex justify-center">
                <p class="text-center text-xl md:text-2xl">Digital thermometers with programmable set point for burner activation and shutoff</p>
            </div>
        </div>
    </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dropdown = document.getElementById("extradiv");
    const arrow = document.getElementById("dropdown-arrow");
    const button = document.getElementById("dropdown-button");

    if (button) {
      button.addEventListener("click", () => {
        if (!dropdown || !arrow) return;

        const isClosed = dropdown.style.maxHeight === "0px" || !dropdown.style.maxHeight;

        if (isClosed) {
          dropdown.style.maxHeight = dropdown.scrollHeight + "px";
          arrow.style.transform = "rotate(180deg)";
        } else {
          dropdown.style.maxHeight = "0px";
          arrow.style.transform = "rotate(0deg)";
        }
      });
    }
  });
</script>
<style>
    #dropdown-arrow {
        transition: transform 0.3s ease;
    }
</style>