---
import Mapa from "../../assets/images/mapa.png";

---
<section class="w-full mt-10 px-8 2xl:px-52 flex flex-col items-center justify-center min-h-10/12 mb-1">
    <div class="md:w-1/2">
        <img src={Mapa.src} alt="">
    </div>
    <div class="grid grid-cols-3 md:grid-cols-6 gap-8 md:gap-10 pt-5 md:px-20 w-full">
        <div class="flex flex-col items-center font-bold">
            <h1 class="text-xl md:text-4xl text-redBg">+300</h1>
            <p class="text-xs md:text-lg text-center">EMPLOYEES</p>
        </div>
        <div class="flex flex-col items-center font-bold">
            <h1 class="text-xl md:text-4xl text-redBg">+320</h1>
            <p class="text-xs md:text-lg text-center">MANUFACTURED <br>ASPHALT PLANTS</p>
        </div>
        <div class="flex flex-col items-center font-bold">
            <h1 class="text-xl md:text-4xl text-redBg">+60</h1>
            <p class="text-xs md:text-lg text-center">MANUFACTURED <br>ROCK CRUSHERS</p>
        </div>
        <div class="flex flex-col items-center font-bold">
            <h1 class="text-xl md:text-4xl text-redBg">+25</h1>
            <p class="text-xs md:text-lg text-center">YEARS OF <br>MANUFACTURING</p>
        </div>
        <div class="flex flex-col items-center font-bold">
            <h1 class="text-xl md:text-4xl text-redBg">+10</h1>
            <p class="text-xs md:text-lg text-center">COUNTRIES</p>
        </div>
        <div class="flex flex-col items-center font-bold">
            <h1 class="text-xl md:text-4xl text-redBg">+150</h1>
            <p class="text-xs md:text-lg text-center">PRODUCTS</p>
        </div>
    </div>

</section>
