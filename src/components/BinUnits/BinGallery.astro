import g9 from "../../assets/images/BinUnits/GallerySlider/Big/TmbCE110P268TrabB.webp";
import g10 from "../../assets/images/BinUnits/GallerySlider/Big/TmbCE110P268TrabRapA.webp";
import g11 from "../../assets/images/BinUnits/GallerySlider/Big/TmbCE110P268TranspA.webp";
import g12 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TrabA.webp";
import g13 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TrabB.webp";
import g14 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TrabC.webp";
import g15 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TrabD.webp";
import g16 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TranspA.webp";
import g17 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TranspB.webp";
import g18 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TranspC.webp";
import g19 from "../../assets/images/BinUnits/GallerySlider/Big/TqePCU60N70TranspD.webp";
import g20 from "../../assets/images/BinUnits/GallerySlider/Big/consola.webp";
import g21 from "../../assets/images/BinUnits/GallerySlider/Big/tanqueplusA.webp";
import g22 from "../../assets/images/BinUnits/GallerySlider/Big/tanqueplusB.webp";
import g23 from "../../assets/images/BinUnits/GallerySlider/Big/tanqueplusC.webp";
import g24 from "../../assets/images/BinUnits/GallerySlider/Big/tanqueplusD.webp";
