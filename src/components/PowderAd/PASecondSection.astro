---
import CardSection from "../IntegralAsphalt/CardSection.astro";
import PAPlanos from "./PAPlanos";
import PAGallery from "./PAGallery.astro";
import img1 from "../../assets/images/PowderA/binLids.webp";
import img2 from "../../assets/images/PowderA/powderA.webp";
import img3 from "../../assets/images/PowderA/tlvLoaded.webp";
import { Image } from "astro:assets";
import CardSectionResponsive from "../unitComponents/CardSectionResponsive.astro";
---

<section>
  <div class="w-full bg-blueMain px-8 lg:px-52 flex justify-center">
    <div class="max-w-7xl grid grid-cols-1 lg:grid-cols-2 gap-10 py-10">
      <div>
        <Image src={img1} alt="Bin lids" class="w-4/5" />
      </div>
      <div class="font-bold text-white flex flex-col justify-center">
        <h2 class="text-2xl md:text-3xl">Bin lids</h2><br />
        <p class="text-sm lg:text-lg md:text-lg">
          Built-in bin lids keep the powder dry and protected from dust and
          other contaminants in industrial environments. â€” maintaining material
          integrity even on windy days.
        </p>
      </div>
    </div>
  </div>
  <div class="py-10 px-8">
    <h1 class="text-center font-bold text-blueMain text-2xl md:text-3xl">
      Choose life-lasting components for long-term performance and return on
      investment
    </h1>
  </div>
  <div class="w-full max-w-7xl px-8 mx-auto grid grid-cols-1 md:grid-cols-2">
    <div class="w-full flex flex-col gap-6">
      <div>
        <Image src={img2} alt="Powder Additives VT" class="w-4/5" />
      </div>
      <h2
        class="font-bold text-center md:text-start lg:text-start text-redBg text-xl md:text-2xl"
      >
        Common Powder Additives <br /> in Industrial Applications
      </h2>
      <div
        class="bg-white rounded-2xl w-full p-8 grid grid-cols-2 gap-6 font-bold text-grisT text-base md:text-lg"
      >
        <ul class="list-disc ml-6">
          <li>Cellulose</li>
          <li>Cement</li>
          <li>Lime</li>
          <li>Ash</li>
          <li>Silica</li>
          <li>Metals</li>
          <li>Graphite</li>
        </ul>
        <ul class="list-disc ml-6">
          <li>Gypsum</li>
          <li>Clay</li>
          <li>Talc</li>
          <li>Alumina</li>
          <li>Carbon</li>
          <li>Dolomite</li>
          <li>Barium</li>
        </ul>
      </div>
    </div>
    <div
      class="flex justify-center items-end px-5 mb-3 lg:mb-[4.5rem] mt-6 md:mt-0"
    >
      <Image src={img3} alt="Powder additive with sand on top" />
    </div>
  </div>
  <PAGallery/>

  <PAPlanos client:only />
  <!-- <CardSection /> -->
   <CardSectionResponsive/>
</section>
