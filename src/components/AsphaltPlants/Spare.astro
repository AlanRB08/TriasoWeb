import Boxes from "../../assets/images/Boxes.jpg";
import LearnBtn from "../unitComponents/LearnBtn.astro";
---
<div class="w-full flex flex-col items-center justify-center font-bold px-8 lg:px-52 mt-24">
    <h1 class="text-grisT lg:text-4xl text-2xl mb-10">Complete Equipment Solutions
        <br> for Your <span class="text-blueMain">Asphalt Plan</span></h1>
    <button class="bg-blueMain hover:bg-blueMain text-white
     mt-5 text-sm md:text-lg
      font-normal rounded-full py-1 px-4">
      Learn more
    </button>
    <section class="w-full mt-10 flex flex-col items-center justify-center">
        <div class="flex flex-col items-center justify-center w-full mt-10">
            <h1 class="text-xl md:text-4xl text-grisT font-bold mb-10">TriasoÂ® Spare Parts</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <img src={Boxes.src} alt="" class="rounded-2xl mb-6">
                </div>
                <div class="font-bold flex flex-col items-center text-grisPPP text-base md:text-lg">
                    <p class="text-justify">No other asphalt plant manufacturer globally produces
                         as many components for its own equipment as Triaso does. <br> <br>That's why we 
                         provide the best service, warranty, and direct support from both 
