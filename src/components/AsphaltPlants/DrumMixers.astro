<div class="w-full flex flex-col items-center justify-center font-bold">
  <div
    class="max-w-[2400px] flex flex-col items-center justify-center mt-10 md:mt-20 text-white"
  >
    <div
      class="grid grid-cols-1 md:grid-cols-3 justify-center items-start gap-4"
    >
      <div class="hidden justify-start items-end md:flex h-full">
        <Image src={img5} alt="Drum Mixer" class="w-[80%]" />
      </div>
      <div class="hidden md:flex-col items-start justify-start pt-4 md:flex">
        <h1 class="md:text-4xl text-2xl text-black text-center w-full">
