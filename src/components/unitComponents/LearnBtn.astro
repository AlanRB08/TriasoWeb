---
export interface Props {
  text?: string;
  className?: string;
  href?: string;
  isExternal?: boolean;
}

const {
  text = "Learn More",
  className = "bg-redBg hover:bg-transparent hover:text-redBg",
  href = "#",
  isExternal = false
} = Astro.props
---

<a
  href={href}
  class={`text-white mt-5 text-xs md:text-sm font-normal border-2 border-redBg rounded-full py-2 px-6 transition-all duration-300 ease-out transform hover:scale-110 hover:shadow-lg ${className}`}
  target={isExternal ? "_blank" : "_self"}
  rel={isExternal ? "noopener noreferrer" : undefined}
>
  {text}
</a>
