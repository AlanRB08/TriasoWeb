---
import asphaltPlant from "../assets/images/asphaltPlant.webp";
import rockCrusher from "../assets/images/rockCrusher.webp";
---
<div class="h-screen w-full">
    <div class="grid grid-cols-2 gap-7 items-center justify-center my-10">
        <!-- Primer item -->
        <div class="flex flex-col items-center">
            <h1 class="font-bold text-xl text-center text-[#393939] my-2">ASPHALT PLANT</h1>
            <div class="h-[300px] w-full overflow-hidden flex justify-center">
                <img 
                    src={asphaltPlant.src} 
                    class="h-full object-cover w-full max-w-full" 
                    alt="Asphalt Plant"
                >
            </div>
        </div>
        
        <!-- Segundo item -->
        <div class="flex flex-col items-center">
            <h1 class="font-bold text-xl text-center text-[#393939] my-2">ROCK CRUSHERS</h1>
            <div class="h-[300px] w-full overflow-hidden flex justify-center">
                <img 
                    src={rockCrusher.src} 
                    class="h-full object-cover w-full max-w-full" 
                    alt="Rock Crusher"
                >
            </div>
        </div>
    </div>
    <div class="flex items-center justify-between h-[80px]">
        <div class="bg-[#14427C] w-full h-full">
            <button class="bg-[#128c7e] text-white text-sm rounded-2xl px-4 py-1">
                Talk to a representative
            </button>
        </div>
        <div class="bg-[#0044A4] w-full h-full">
            <h1>spot 2</h1>
        </div>
    </div>
    <div></div>

</div>