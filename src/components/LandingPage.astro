---
import asphaltPlant from "../assets/images/asphaltPlant.webp";
import rockCrusher from "../assets/images/rockCrusher.webp";
---
<div class="h-screen w-full">
    <div class="grid grid-cols-2 items-center justify-center">
        <div>
            <h1 class="font-bold text-xl text-center text-[#393939]">ASPHALT PLANT</h1>
            <div class="max-h-[300px] max-w-screen-lg">
                <img src={asphaltPlant.src} class="max-h-[300px]" alt="">
            </div>
        </div>
        <div >
            <h1 class="font-bold text-xl text-center text-[#393939]">ROCK CRUSHERS</h1>
            <div class="max-h-[300px] max-w-screen-lg">
                <img src={rockCrusher.src} alt="">            
            </div>
            
        </div>
    </div>
    <div class="flex items-center justify-between h-[80px]">
        <div class="bg-[#14427C] w-full h-full">
            <button class="bg-[#128c7e] text-white text-sm rounded-2xl px-4 py-1">
                Talk to a representative
            </button>
        </div>
        <div class="bg-[#0044A4] w-full h-full">
            <h1>spot 2</h1>
        </div>
    </div>
    <div></div>

</div>